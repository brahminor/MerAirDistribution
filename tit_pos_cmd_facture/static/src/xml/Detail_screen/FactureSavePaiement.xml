<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="FactureSavePaiement" owl="1">
        <div class="ticket-screen screen">
            <div class="screen-facture">
                <div class="controls">
                    <div class="buttons_back">
                        <button class="button back" t-on-click="showScreen('FacturesNonPayee')">
                            <i class="fa fa-angle-double-left fa-fw"></i>
                            <span class="back_text">Retour</span>
                        </button>  
                    </div> 
                            <div class="button_enreg_paiement_btn">
                                <button class='button button_enreg_paiement' title="Enregistrer le paiement" t-on-change="captureChange" t-on-click="enregistrer_paiement(  props.facture_selected.id)">
                                   Créer un paiement
                                </button>
                            </div>

                    </div>
                <div class="client-select">
                    <div>
                        <span class="label">Référence  :</span>
                        <input class="detail mntnt" name="ref" t-att-value="props.facture_selected.name || ''" readonly="1"/>
                    </div>
                    <br/>
                    <div class="edit_client_selected">
                        <span class="label">Client  :</span>
                        <input class="detail client_selectionne" name="client_recuperes_name" t-att-value="get_name_client(props.facture_selected)" readonly="1"/>
                    </div>
                    <br/>
                    <div class="edit_client_selected">
                        <span class="label">Avoir du client  :</span>
                        <input class="detail client_selectionne" name="client_recuperes_avoir" t-att-value="get_avoir_client(props.facture_selected)" readonly="1"/>
                    </div>
                    <br/>
                    <div>
                        <span class="label">Montant total  :</span>
                        <input class="detail mntnt" name="montant_total" t-att-value="props.facture_selected.amount_total || '0'" readonly="1"/>
                    </div>
                    <br/>
                    <div>
                        <span class="label">Montant dû :</span>
                        <input class="detail mntnt" name="montant_du" t-att-value="props.facture_selected.amount_residual || '0'" readonly="1"/>
                    </div>
                    <br/>
                     <div>
                        <span class="label">Montant  :</span>
                        <input class="detail mntnt" name="montant_saisi" t-att-value="'0'"  t-on-change="captureChange" />
                    </div>
                    <br/>
                    <div class="client-detail amount-input">
                        <span class="label lb-journal-inv">Journal</span>
                          <select class='detail needsclick journal-inv-payment' name='facture_recuperes_id' t-on-change="captureChange" >
                                <option value=''>None</option>
                                <t t-foreach='env.pos.journals_recuperes' t-as='journal'>
                                    <t t-if="journal.type == 'bank' or journal.type == 'cash'" >
                                        <option t-att-value='journal.id'>
                                            <t t-esc="journal.name"/>
                                        </option>
                                    </t>
                                    <t t-elif="journal.type == 'avoir_type' and journal.avoir_journal == true">
                                        <option t-att-value='journal.id'>
                                            <t t-esc="journal.name"/>
                                        </option>
                                    </t>
                                </t>
                            </select>
                    </div>

                    
            </div>
        </div></div>
        </t>
    </templates>


